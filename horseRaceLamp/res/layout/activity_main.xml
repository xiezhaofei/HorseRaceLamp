<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:horselamp="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.example.horseracelamp.HorseRaceLamp
        android:id="@+id/horseRaceLamp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        horselamp:lampWidth = "10dp"
        horselamp:lampHeight = "10dp"
        horselamp:lampPadding = "5dp"
        horselamp:lightColor = "#FF2D2D"
        horselamp:darkColor = "#232323"
        horselamp:lampNum = "10"
        horselamp:lightLampNum = "5"
         />

</LinearLayout>